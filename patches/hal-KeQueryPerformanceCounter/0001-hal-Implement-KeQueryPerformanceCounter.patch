+LARGE_INTEGER WINAPI KeQueryPerformanceCounter(LARGE_INTEGER *frequency)
+{
+    LARGE_INTEGER counter;
+
+    TRACE("(%p)\n", frequency);
+
+    NtQueryPerformanceCounter(&counter, frequency);
+    return counter;
+}
