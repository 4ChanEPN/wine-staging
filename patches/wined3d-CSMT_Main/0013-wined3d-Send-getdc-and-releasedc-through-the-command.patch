+static void wined3d_cs_exec_release_dc(struct wined3d_cs *cs, const void *data)
+{
+    const struct wined3d_cs_get_release_dc *op = data;
+
+    *op->hr = wined3d_texture_release_dc_cs(op->texture, op->sub_resource_idx);
+}
